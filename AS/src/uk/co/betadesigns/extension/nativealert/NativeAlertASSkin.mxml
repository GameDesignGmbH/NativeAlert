<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
	<fx:Metadata>[HostComponent("uk.co.betadesigns.extension.nativealert.NativeAlertAS")]</fx:Metadata>
    
	<fx:Script>
		<![CDATA[
			private function close_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
			private function buttonClickHandler( event: MouseEvent ) : void 
			{
				
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout paddingLeft="10"
						  paddingBottom="10"
						  paddingTop="10"
						  paddingRight="10"
						  gap="10"/>
	</s:layout>
	<s:Label id="messageText"
			 styleName="medium"
			 text="{ hostComponent.message }"/>
	
	<s:Group horizontalCenter="0"
			 verticalCenter="0"
			 width="100%"
			 height="100%">
		<s:DataGroup id="dataGroup"
					 horizontalCenter="0"
					 dataProvider="{ hostComponent. }">
			<s:itemRenderer>
				<fx:Component>
					<s:ItemRenderer autoDrawBackground="false">
						<s:Button click="{ outerDocument.buttonClickHandler(event) }"
								  label="{ data }"/>
					</s:ItemRenderer>
				</fx:Component>
			</s:itemRenderer>
		</s:DataGroup>
		
		<s:Label id="close" text="{ hostComponent.closeButtonLabel }" 
				 click="close_clickHandler(event)"
	</s:Group>
</s:Skin>
